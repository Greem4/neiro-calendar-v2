<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="1" author="Greem4">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="attendance_records"/>
            </not>
        </preConditions>

        <createTable tableName="attendance_records">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="visit_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="attended" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
